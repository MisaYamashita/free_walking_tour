<div class="users-wrapper">
  <div class="users-container">
    <h3>ユーザー一覧</h3>
    <div class="user-list">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name %>
            <% if current_user.admin? && !(current_user == user) %> <!--Admin userの場合はdeleteボタンを表示する -->
              <%= link_to "delete", admin_user_path(user.id), method: :delete, data: { confirm: "You sure?" } %>
            <% end %>
        </li>
      <% end %>
      <%= link_to '戻る', :back, class: "back-btn" %>
    </div>
  </div>
</div>