<div class="top-wrapper text-center">
  <div class="user-top-container container">
    <div class="top-title">
      <h1>FREE WALKING TOUR</h1>
      <h2>IN JAPAN</h2>
      <h1>ENJOY TOURS WITH THE LOCALS</h1>
    </div>
    <% unless logged_in? %>
      <div class="row">
        <div class="col-sm-offset-4 col-sm-2">
          <%= link_to 'Sign up', signup_path, class: 'btn btn-block btn-pink' %>
        </div>
        <div class="col-sm-2">
          <%= link_to 'Log in', login_path, class: 'btn btn-block btn-pink' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="middle-wrapper">
  <div class="row middle-container">
    <div class="col-md-offset-2 col-md-8 serach-prefecture">
      <h5>＜ツアー検索＞</h5>
      <h6>都道府県、または都市名を入力してください</h6>
      <%= form_tag(all_tour_path, method: :get) do %>
        <div class="tour-search-form">
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "検索", :address => nil %>
        </div>
      <% end %>
    </div>
  </div>
</div>