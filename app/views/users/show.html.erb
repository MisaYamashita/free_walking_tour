<div class="user-top-wapper">
  <div class="user-top-container">
    <div class="top-title">
      <h1>FREE WALKING TOUR</h1>
      <h2>IN JAPAN</h2>
      <h1>ENJOY TOURS WITH THE LOCALS</h1>
    </div>
  </div>
  <div class="user-middle-container">
    <div class="col-md-3 prfile-wapper">
      <p>プロフィール</p>
      <%= image_tag 'Kyoto.jpg', class: "side-image-size" %><br>
      <p>＜お名前＞</p><br>
      <%= current_user.name %><br>
      <p>＜プロフィール文＞</p><br>
      <%= current_user.profile.body %><br>
    </div>
    <div class="col-md-offset-3 col-md-8">
      <div class="tour-search-wrapper">
        <div class="tour-search-container">
          <h5>＜ツアー検索＞</h5>
          <h6>都道府県、または都市名を入力してください</h6>
          <%= form_tag(all_tour_path, method: :get) do %>
            <div class="tour-search-form">
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "検索", :address => nil %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="your-plan-wrapper">
        <div class="your-plan-container">
          <h5>＜<%= current_user.name %>さんの予定表＞</h5>
          <h6>参加予定のツアー、開催予定のツアーが表示されます</h6>
            <% current_user.tours.each do |tour| %>
              <div class="tour-box-list">
                <%= link_to tour.title, '#' %><P>開催日時：<%= tour.date %></P>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>