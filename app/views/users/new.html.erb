<div class="signup-wrapper">
  <div class="signup-container container">
    <div class="row">
      <div class="col-md-offset-4 col-md-6">
        <h3>Sign Up</h3>
        <%= form_for @user, url: signup_path do |f| %>
          <%= render 'layouts/error_messages', model: f.object  %>
          <div class="form-group">
            <%= f.label :name, "氏名" %>
            <%= f.text_field :name, class: 'input-form form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: 'input-form form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'input-form form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            <%= f.password_field :password_confirmation, class: 'input-form form-control' %>
          </div>
          <div>
            <%= f.submit "登録", class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= link_to "ログインはこちら", login_path %>  
      </div>
    </div>
  </div>
</div>