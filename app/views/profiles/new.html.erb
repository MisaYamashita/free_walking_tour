<div class="profile-wrapper">
  <div class="profile-container container">
    <div class="row">
      <h3>プロフィールがありません</h3>
      <h3>下記のフォームから登録してください</h3>
      <div class="left-main-container">
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="profile-image">
          <%= image_tag 'rails.png', class: 'image-size' %>
          <p>＜プロフィール画像＞</p>
          <%= form_for @profile, url: profiles_new_path do |f| %>
            <%= f.label :image, "画像：" %>
            <%= f.file_field :image %>
          <% end %>
        </div>
      </div>
      <div class="right-main-container">
        <div class="profile-name">
          <p class="name-title">＜名前＞</p>
          <%= current_user.name %>
        </div>
        <div class="empty-profile">
          <p>＜プロフィール文＞</p>
          <%= form_for @profile, url: profiles_new_path do |f| %>
          <div>
        　  <%= f.text_field :body, class: 'body-form' %>
        　</div>
        　<div>
        　  <%= f.submit "登録", class: "btn profile-btn" %>
        　</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>