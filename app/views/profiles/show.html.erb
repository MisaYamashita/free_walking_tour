<div class="profile-wrapper">
  <div class="container">
    <h3 class="text-center"><%= @profile.user.name %>さんのプロフィール</h3>
    <div class="row justify-content-center">
      <div class="col-sm-offset-3 col-sm-5">
        <div class="profile-image text-center">
          <%= image_tag @profile.image.to_s, class: "image-size" %>
        </div>
        <div class="profile-body">
          <h5>＜プロフィール文＞</h5>
          <% if @profile.body? %>
            <span class="profile-body"><%= @profile.body %></span>
          <% else %>
            <p>プロフィール文がありません</p>
          <% end %>
          <div>
            <% if @profile.user == current_user %>
              <%= link_to "プロフィールを編集する", profiles_edit_path(current_user.id) %><br>
            <% end %>
          </div>
          <%= link_to '戻る', :back, class: "back-btn" %>
        </div>
      </div>
    </div>
  </div>
</div>